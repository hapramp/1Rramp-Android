<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/judge_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:src="@drawable/circular_image_placeholder" />

    <TextView
        android:id="@+id/judge_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_above="@+id/reference_line"
        android:layout_toRightOf="@+id/judge_image"
        android:textColor="@color/Black87"
        android:textSize="14sp"
        android:text="Ankit Kumar" />

    <TextView
        android:id="@+id/judge_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/judge_image"
        android:layout_below="@+id/reference_line"
        android:textColor="@color/Black54"
        android:textSize="12sp"
        android:text="bxute" />

    <TextView
        android:clickable="true"
        android:id="@+id/judge_add_btn"
        android:text="Add"
        android:textSize="12sp"
        android:background="@drawable/filled_btn_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:id="@+id/reference_line"
        android:layout_centerVertical="true"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

</RelativeLayout>