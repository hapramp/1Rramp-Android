<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?android:selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/judge_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/circular_image_placeholder" />

    <TextView
        android:id="@+id/judge_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/judge_image"
        android:textColor="@color/Black87"
        android:textSize="14sp"
        android:text="Ankit Kumar" />

    <TextView
        android:id="@+id/judge_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/judge_image"
        android:layout_below="@+id/judge_fullname"
        android:textColor="@color/Black54"
        android:textSize="12sp"
        android:text="bxute" />

    <TextView
        android:clickable="true"
        android:id="@+id/judge_add_btn"
        android:text="Add"
        android:textSize="12sp"
        android:background="@drawable/filled_btn_bg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>