<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false">

    <FrameLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone" />

    <TextView
        android:id="@+id/createArticleBtn"
        android:layout_width="87dp"
        android:layout_height="32dp"
        android:layout_above="@+id/createPostBtn"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:background="@drawable/create_post_floating_btn_bg"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="BLOG"
        android:textColor="@color/Black38"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/createPostBtn"
        android:layout_width="87dp"
        android:layout_height="32dp"
        android:layout_above="@+id/plusBtn"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:background="@drawable/create_post_floating_btn_bg"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:text="POST"
        android:textColor="@color/Black38"
        android:textSize="14sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/plusBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/home_more_btn_selector"
        android:clickable="true"
        android:elevation="4dp"
        android:gravity="center"
        android:text="ï•"
        android:textColor="#ffffff"
        android:textSize="22sp" />


</RelativeLayout>