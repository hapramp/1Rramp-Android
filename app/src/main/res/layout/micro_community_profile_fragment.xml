<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/community_profile_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circular_image_placeholder"
            android:layout_width="108dp"
            android:layout_height="108dp" />

        <TextView
            android:id="@+id/community_hashtag"
            android:textColor="@color/Black87"
            android:layout_below="@+id/community_profile_image"
            android:text="#dotdesigns"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/community_join_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/community_hashtag"
            android:layout_marginTop="8dp"
            android:text="Join"
            android:background="@drawable/filled_btn_bg"
            android:textColor="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/community_description"
            android:textSize="16sp"
            android:textColor="@color/Black54"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/community_join_button"
            android:layout_width="wrap_content"
            android:text="This is description section of community. Here the content will be dynamic and reflect the purpose of community. No promotions are allowed in this section."
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>