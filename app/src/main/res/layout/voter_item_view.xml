<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/voter_imageview"
        android:src="@drawable/circular_image_placeholder"
        android:layout_width="64dp"
        android:padding="12dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/voter_name"
        android:layout_toRightOf="@+id/voter_imageview"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="#8B000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vote_value"
        android:textSize="16sp"
        android:layout_marginRight="12dp"
        android:textColor="#DE000000"
        android:layout_alignParentRight="true"
        android:text="$ 1200"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vote_percent"
        android:textSize="16sp"
        android:layout_marginRight="12dp"
        android:textColor="#89000000"
        android:layout_toLeftOf="@+id/vote_value"
        android:text="4%"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>