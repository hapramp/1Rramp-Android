<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="?android:selectableItemBackground"
    android:visibility="visible">

    <ImageView
        android:id="@+id/judge_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/circular_image_placeholder" />

    <ImageView
        android:id="@+id/remove_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/judge_image"
        android:background="@drawable/close_icon_bg"
        android:clickable="true"
        android:elevation="1dp"
        android:padding="4dp"
        android:src="@drawable/close_icon" />

    <TextView
        android:id="@+id/judge_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:lines="1"
        android:text="Select judge"
        android:textColor="@color/Black87"
        android:textSize="12sp" />
</RelativeLayout>
